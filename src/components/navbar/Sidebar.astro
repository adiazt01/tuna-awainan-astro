import SidebarItem from "./SidebarItem.astro";
import { supabase } from "../../lib/supabase";
import '@fontsource-variable/quicksand';
import { AstroCookies } from "astro";

const LINKS = [
    { label: 'Inicio', link: '/' },
    { label: 'Novedades', link: '/novedades'},
    { label: 'Expertos', link: '/forum/introExpertos/' },
    { label: 'Comunidad', link: '/comunity/posters/introComunidad' },
    { label: 'Art√≠culos', link: '/categories/articles?name=' },
    { label: 'Acuario', link: '/aquarium/' },
    { label: 'Sobre nosotros', link: '/about' },
    { label: 'Cuenta', link: '/signin' },
];


let { cookies } = Astro;
let currentPath 
if (!Astro.cookies.get('pagina')) {
  if(Astro.cookies.get('pagina')=='/'){
  currentPath = Astro.url.pathname;
  Astro.cookies.set('pagina', currentPath);}
}else{
  currentPath =  Astro.cookies.get('pagina');
}


 //para leer la pagina actual


const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

let userId;
if (accessToken && refreshToken) {
  let session = await supabase.auth.setSession({
    refresh_token: refreshToken.value,
    access_token: accessToken.value,
  });

  try {
    if (session.error) {
      Astro.cookies.delete("sb-access-token", { path: "/" });
      Astro.cookies.delete("sb-refresh-token", { path: "/" });
      return Astro.redirect("/signin");
    }
  } catch (error) {
    Astro.cookies.delete("sb-access-token", { path: "/" });
    Astro.cookies.delete("sb-refresh-token", { path: "/" });
    return Astro.redirect("/signin");
  }
  userId = session.data.user?.id;
}

