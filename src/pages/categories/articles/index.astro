import Image from "astro/components/Image.astro";
import Layout from "../../../layouts/Layout.astro";
import { supabase } from "../../../lib/supabase";
import BackButton from "../../../components/BackButton.astro";

// Obtener los parámetros de búsqueda de la URL
const querySearch = new URLSearchParams(Astro.url.search);
const nameQueryToSearch = querySearch.get("name");

// Obtener el número de página actual, por defecto es 1
const page = parseInt(querySearch.get("page") || "1");
const articlesPerPage = 3; // Número de artículos por página
const from = (page - 1) * articlesPerPage; // Índice de inicio
const to = from + articlesPerPage - 1; // Índice de fin

// // Filtrar los artículos por categoría


// Obtener la cantidad total de artículos
const { count: totalArticles, error: errorTotalArticles } = await supabase
  .from("articles")
  .select("title, id,  tags!inner(*) , coverimage, content", { count: "exact" })
  .ilike("tags.name",`%${nameQueryToSearch}%`)

  
console.log(totalArticles)
// Obtener los artículos para la página actual
const { data: articles, error: errorArticles } = await supabase
  .from("articles")
  .select("title, id,  tags!inner(*), coverimage, content")
  .ilike("tags.name", `%${nameQueryToSearch}%`)
  .range(from, to)

const { data: categories, error: errorCategories } = await supabase
  .from("tags")
  .select("name, id")
  .order("name", { ascending: true })
  .range(0, 3);

const { data: relatedArticles, error: errorRelatedArticles } = await supabase
  .from("articles")
  .select("title, id, tags!inner(*), coverimage, content")
  .range(0, 2);

// Redirigir a la página 404 si hay errores o no hay artículos
if (errorArticles) {
  console.log(errorArticles)

  return Astro.redirect("/404");
}

// Redirigir a la página 404 si la página es inválida
if (page < 1 || totalArticles === null || from > totalArticles) {
  return Astro.redirect("/404");
}

// Calcular si hay más páginas disponibles
const hasNextPage = to + 1 < totalArticles;
const hasPreviousPage = page > 1;

// Script para manejar el desplazamiento
let carouselContainer;

function scrollLeft() {
    if (carouselContainer) {
      carouselContainer.scrollBy({
        left: -300, // Desplaza a la izquierda (ajusta este valor si quieres más o menos desplazamiento)
        behavior: 'smooth'
      });
    }
  }

  function scrollRight() {
    if (carouselContainer) {
      carouselContainer.scrollBy({
        left: 300, // Desplaza a la derecha
        behavior: 'smooth'
      });
    }
  }
---

<Layout title="Tuna Awainan | Artículos">

  <!--categorias -->
  <section class=" sticky top-0 z-10 w-full bg-white shadow-sm border-b border-gray-100">
    <div class="container mx-auto px-4 py-2">
      <h2 class=" font-custom flex justify-center text-2xl font-bold text-pretty mb-4">Otras categorías</h2>
      <div class="flex justify-center space-x-4 overflow-x-auto hide-scroll-bar">
        {categories.map((category) => (
          <a
            href={`/categories/articles?name=${category.name}`}
            class="mb-3 text-gray-700 hover:text-[#0aaccbd4] text-md font-medium bg-gray-100
              rounded-full px-4 py-1 transition-colors duration-200 whitespace-nowrap dark:bg-gray-800 dark:text-gray-300"
          >
            {category.name}
          </a>
        ))}
      </div>
    </div>
  </section> 


  <!--botones de navegacion -->


  <section class="font-custom grid grid-cols-1 max-w-screen-xl mx-auto gap-8 px-40 mt-10" >
    <div class="flex flex-col gap-4">
      <header>
        <!--
        <h1 class="text-5xl font-bold text-center my-6 mb-4">Artículos</h1>
        -->
        <p class="text-base text-gray-700 dark:text-gray-400 ">
          {articles.length} Artículos encontrados de la categoría  
          <span>
            {nameQueryToSearch?.toLowerCase()}
          </span>   
        </p>
      </header>

        <!--aqui se muestran los articulos -->
      <div class="container-article">
        <ul class="grid grid-cols-1 max-w-screen-md gap-8">
          {
            // Mostrar los artículos
            articles.map((article) => (
              <li class="w-full">
                <a
                  href={`/categories/articles/${article.id}`}
                  class="grid grid-cols-1 border-x-lime-100 lg:grid-cols-2 w-full items-start bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 min-h-56"
                >
                  <img
                    class="object-cover w-full h-ull min-h-56 rounded-t-lg  md:rounded-none md:rounded-s-lg"
                    src={article.coverimage}
                    alt=""
                  />
                  <div class="flex h-full flex-col justify-between p-4 leading-normal">
                    <h5 class="mb-2 text-2xl text-pretty truncate font-bold tracking-tight text-gray-900 dark:text-white">
                      {article.title.length > 50
                        ? article.title.substring(0, 35) + "..."
                        : article.title}
                    </h5>
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                      {article.content.substring(0, 100) + "..."}
                    </p>
  
                    <button
                      type="button"
                      class="button text-white mt-auto bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
                    >
                      Leer más
                    </button>
                  </div>
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      
      <div class="flex justify-center mt-8">
       
      </div>
    </div>

    <div class="font-custom grid grid-cols-1 max-w-screen-xl mx-auto gap-8  mt-10">
      <section class="flex flex-col">
        <h2 class="text-2xl font-bold text-pretty mb-2 self-center ">
          Artículos relacionados
        </h2>
        
        <ul class="flex flex-col gap-4 mb-12">
          <!--  Mostrar articuos relacionado-->
          <div class="relative">
            <!-- bot para desplazarse  izquierda -->
            <button
              onClick={scrollLeft}
              class="ajuste-izq absolute top-1/2 transform -translate-y-1/2 bg-[#0aaccb] hover:bg-[#0aaccbd4]  text-gray-700 font-bold py-1 px-4 rounded-full"
            >
              ⬅️
            </button>
          
            <!-- Contenedor del carrusel #f0f0f0 -->
            <div
              ref={el => (carouselContainer = el)}
              class="flex overflow-x-scroll scroll-smooth space-x-4 px-4 py-6"
            >
              {relatedArticles && relatedArticles.map((article) => (
                <a
                  href={`/categories/articles/${article.id}`}
                  class="min-w-[300px] max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
                >
                  <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                    {article.title.length > 50
                      ? article.title.substring(0, 35) + "..."
                      : article.title}
                  </h5>
                  <p class="font-normal text-gray-700 dark:text-gray-400">
                    {article.content.substring(0, 100) + "..."}
                  </p>
                </a>
              ))}
            </div>
          
            <!-- Botón para desplazarse a la derecha -->
            <button
              onClick={scrollRight}
              class="ajuste-der absolute right-0 top-1/2 transform -translate-y-1/2 bg-[#0aaccb] hover:bg-[#0aaccbd4]  text-gray-700 font-bold py-2 px-4 rounded-full"
            >
              ➡️
            </button>
          </div>        
        </ul>
      </section>
    </div>
  </section>
</Layout>


<style>
  .ajuste-izq{
    left: -4em;
  }

  .ajuste-der{
    right: -5em;
  }

  .button{
      background-color: #0aaccb;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
