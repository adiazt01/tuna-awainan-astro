<Layout title="Tuna Awainan">
	<div class="grid grid-cols-2 xl:grid-cols-2 font">
		<div class="flex flex-col gap-4 items-center justify-center h-screen bg-[#0cc0df]">
			<h1 class="text-7xl leading-tight text-center text-white font-extrabold dark:text-white">
				OTROS YA<br /> PUSIERON <br />
				SU GOTA<br />
				DE AGUA
			</h1>
			<h3 class="text-white text-4xl font-semibold">Y tú, ¿qué esperas?</h3>
			<Button> Saber más </Button>
		</div>

		<div class="relative overflow-hidden">
			
			  {	
				bubbles.map((bubble) =>(
					<a href= {"/categories/articles/"+ bubble.id+""}> 
						<div class={bubble.style}
						 
					style={"background-image: url("+bubble.img+");   background-repeat: no-repeat; background-size: cover; background-position: top ;"}></div>
					 </a>
				))
			}
		</div>
	</div>
</Layout>

