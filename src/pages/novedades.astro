<style>
  /*define colores*/
  :root {
    --bg-color: #f8f9fa;
    --text-color: #333;
    --secondary-text-color: #666;
    --border-color: #e5e7eb;
    --shadow-color: rgba(0, 0, 0, 0.05);
    --btn-color: #0cc0df;
  }

  .container{
    padding: 0 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80%;
    max-width: 800px;
    margin: 0 auto;
  }

  .content-container {
    padding: 0 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 90%;
    max-width: 800px;
    margin: 0 auto;
  }

  .grey-section {
    width: 100%;
    margin-top: 20px;
    padding: 20px;
    background-color: var(--bg-color);
    border-radius: 8px;
